{% from 'game/index.html.twig' import get_path %}

{% for review in reviews %}
  {% set reviewData = { firstPlay: review.firstPlay, hourSpend: review.hourSpend, comment: review.comment, mark: review.mark } %}
  {# Each game is displayed on a "card" containing all the data #}
  <div class="card-max-auto card-max-md-none mx-auto my-3 rounded-3 border overflow-hidden">
    {# Card title bar with the the title on one side, and 3 infos on the other side (or on top of each other on small screen) #}
    {# <div class="row gx-0 bg-primary-subtle border-bottom text-center">
      <div class="col-12 border-bottom col-md border-bottom-md-0">
        <div class="d-flex py-2 px-2 ps-md-3 justify-content-center justify-content-md-start align-items-center">
          <h5 class="mb-0 p-0">
            {{ review.game.name }}
            <a class="fs-6 p-0 link-secondary" href="{{ path('game_edit', { id: review.game.id }) }}" data-turbo-frame="_top"><span class="bi bi-pen ps-1"></span></a>
          </h5>
        </div>
      </div>
    </div> #}

    {# Card body divided in two parts : review information, and the game image (in md or more) #}
    <div class="row py-0 g-0 px-0 bg-body-tertiary">
      {# Card body - first part : review information #}
      <div class="col-12 px-0 col-md">
        <div class="mx-auto">
          <div class="row p-0 m-0 d-flex">
            <div class="col-12 p-2">
              <h5 class="mb-0 p-0">
                {{ review.game.name }}
              </h5>
            </div>
            {% for field, value in reviewData %}
              <div class="col-2 py-1 px-1 text-end text-truncate {{ field != 'description' ? 'border-bottom' : '' }}">
                <span class="fst-italic fs-6 fw-light">{{ ('review.label.' ~ field)|trans({ }, 'validators') }}</span>
              </div>
              <div class="col-10 py-1 text-start {{ (field not in ['genres', 'description'] ? 'text-truncate') ~ ' ' ~ (field != 'description' ? 'border-bottom') }}">
                {{ value|default('-') }}
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
      {# Card body - second part : image of the game (in md or more) #}
      {# <div class="col-12 d-none d-md-block px-0 col-md-3 card-max-md-auto border-bottom border-end-md border-bottom-md-0">
        <div class="mx-auto">
          {% if review.game.imgUrl is not empty %}
            <img src="{{ review.game.imgUrl }}" class="app-card-img-fit" alt="TODO" />
          {% else %}
            <div class="bi bi-image text-center app-card-img-fit app-card-img-missing bg-body-secondary"></div>
          {% endif %}
        </div>
      </div> #}
    </div>
  </div>
{% endfor %}

{% if hasMore %}
  <div class="text-center"
    {{ stimulus_controller('load-more', { url: get_path(searchParam.sortField, searchParam.sortOrder, searchParam.firstResult + env.app.max_results)|trim, lazy: true }) }}>
    <button class="btn btn-outline-secondary" data-load-more-target="button remove">{{ 'form.button.showMore'|trans }}</button>
    <span class="fs-4 text-muted" data-load-more-target="spinner"></span>
  </div>
{% endif %}
