{% extends 'base.html.twig' %}

{% set game_id = form.vars.value.id %}

{% if game_id == null %}
  {% set title = 'game.page.new.title.add' %}
  {% set submitButton = 'form.button.add' %}
{% else %}
  {# {% set game_name = form.vars.value.name %} #}
  {# {{ game_name }} #}
  {% set title = 'game.page.new.title.update' %}
  {% set submitButton = 'form.button.update' %}
{% endif %}

{% block main %}
  {% if game_id != null %}
    <!-- Delete Modal -->
    <div class="modal fade" id="delete-modal" tabindex="-1" aria-labelledby="delete-modal-label" aria-hidden="true" loading="lazy">
      <div class="modal-dialog modal-dialog-centered modal-fullscreen-sm-down">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="delete-modal-label">
              {% trans %}modal.title.delete{% endtrans %}
            </h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            {% trans %}game.page.new.modalDeleteBody{% endtrans %}
          </div>
          <div class="modal-footer">
            <form action="{{ url('app_game_delete', { id: game_id }) }}" method="post">
              <button type="submit" class="btn btn-danger bi bi-trash-fill"><span class="ms-1">{% trans %}form.button.delete{% endtrans %}</span></button>
              <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">{% trans %}form.button.cancel{% endtrans %}</button>
              <input type="hidden" name="token-delete" value="{{ csrf_token('delete-game') }}" />
            </form>
          </div>
        </div>
      </div>
    </div>
  {% endif %}

  <!-- Main section -->
  <section>
    <div class="container">
      <div class="row">
        <div class="col-10 offset-1 col-lg-8 offset-lg-2">
          {{ block('flash', 'theme/page.html.twig') }}

          {{ form_start(form) }}
          <div class="row align-items-start">
            <div class="col">
              {{ form_row(form.steamId, { label: 'game.common.field.label.steamId'|trans, help_html: true, help: 'game.common.field.help.steamId'|trans }) }}
            </div>
            <div class="col-auto">
              <div class="take-space mb-4"></div>
              {{
                form_row(
                  form.steamSearch,
                  {
                    label: '<span class="d-none d-sm-inline ms-1">Chercher</span>',
                    label_html: true,
                    attr: { 'data-turbo': 'false', class: 'btn btn-outline-secondary bi bi-steam' },
                  },
                )
              }}
            </div>
          </div>

          <div class="row">
            <div class="col-12 col-md-8">
              {{ form_row(form.name, { label: 'game.common.field.label.name'|trans }) }}
            </div>
            <div class="col-12 col-md-4">
              {{ form_row(form.releaseDate, { label: 'game.common.field.label.releaseDate'|trans }) }}
            </div>
          </div>
          <div class="row align-items-end">
            <div class="col-12 col-sm-auto pe-sm-0">
              {{ form_row(form.typePrice, { label: 'game.common.field.label.fullPrice'|trans, label_attr: { class: 'radio-inline' } }) }}
            </div>
            <div class="col-12 col-sm ps-sm-0">
              {{ form_row(form.fullPrice, { label: false }) }}
            </div>
          </div>
          {{ form_row(form.developers, { label: 'game.common.field.label.developers'|trans, help: 'game.common.field.help.commaSeparated'|trans }) }}
          {{ form_row(form.genres, { label: 'game.common.field.label.genres'|trans, help: 'game.common.field.help.commaSeparated'|trans }) }}
          {{ form_row(form.description, { label: 'game.common.field.label.description'|trans }) }}
          {{ form_row(form.imgUrl, { label: 'game.common.field.label.imgUrl'|trans }) }}
          <div class="row">
            <div class="col-sm-8 text-sm-start text-center">
              {{ form_widget(form.submit, { label: submitButton|trans }) }}
              <a class="btn btn-outline-secondary ms-2" href="{{ path('app_game_index') }}">Annuler</a>
            </div>
            <div class="col-sm-4 text-sm-end text-center mt-2 mt-sm-0">
              {% if game_id != null %}
                <button type="button" class="btn btn-outline-danger bi bi-trash-fill" data-bs-toggle="modal" data-bs-target="#delete-modal">
                  <span class="ms-1">{% trans %}form.button.delete{% endtrans %}</span>
                </button>
              {% endif %}
            </div>
          </div>

          {{ form_end(form) }}
        </div>
      </div>
    </div>
  </section>
{% endblock %}
