<!DOCTYPE html>
<html lang="{{ app.request.locale|default('fr') }}">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="turbo-refresh-method" content="morph" />
    <meta name="turbo-refresh-scroll" content="preserve" />
    <title>
      {{ title ~ ' - ' ~ ('layout.name'|trans) ~ ' - ' ~ 'Darkirby' }}
    </title>
    <link rel="icon" href=" {{ asset('build/favicon.png') }}" />
    {% block stylesheets %}
      {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
      {{ encore_entry_script_tags('app') }}
    {% endblock %}
  </head>

  <body class="d-flex flex-column min-vh-100">
    <a href="#mainContent" class="visually-hidden-focusable">{{ 'aria.other.skipToContent'|trans }}</a>
    <header>
      <nav class="navbar navbar-expand-sm bg-body-secondary" aria-label="{{ 'aria.label.mainNavigation'|trans }}">
        {% set currentRoute = app.current_route %}
        {% set activeLink = 'class="nav-link active" aria-current="page" aria-selected="true"' %}
        {% set otherLink = 'class="nav-link"' %}
        <div class="container-fluid">
          <div class="navbar-brand">
            {{ 'layout.name'|trans }}
          </div>
          <button class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="{{ 'aria.label.toggleNavigation'|trans }}">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-sm-0">
              <li class="nav-item">
                <a {{ currentRoute starts with 'app_default' ? activeLink|raw : otherLink|raw }} href="{{ path('app_default_index') }}">{{ 'layout.navbar.home'|trans }}</a>
              </li>
              <li class="nav-item">
                <a {{ currentRoute starts with 'app_game' ? activeLink|raw : otherLink|raw }} href="{{ path('app_game_index') }}">{{ 'layout.navbar.game'|trans }}</a>
              </li>
            </ul>
            <ul class="navbar-nav d-flex">
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle app-dropdown-left app-dropdown-smooth d-flex align-items-center"
                  href="#"
                  role="button"
                  data-bs-toggle="dropdown"
                  aria-expanded="false"
                  aria-haspopup="true">
                  <span class="">Darkirby</span>
                  <img src=" {{ asset('build/bibi.jpg') }}" class="img-fluid rounded-circle shadow-sm ms-1 app-avatar-navbar" alt="{{ 'aria.label.avatar'|trans }}" />
                </a>
                <ul class="dropdown-menu dropdown-menu-end" role="menu">
                  <li><a class="dropdown-item" role="menuitem" href="#">{{ 'layout.navbar.account.myReviews'|trans }}</a></li>
                  <li><a class="dropdown-item" role="menuitem" href="#">{{ 'layout.navbar.account.myAccount'|trans }}</a></li>
                  <li><hr class="dropdown-divider" /></li>
                  <li><a class="dropdown-item text-danger" role="menuitem" href="#">{{ 'layout.navbar.account.signOut'|trans }}</a></li>
                </ul>
              </li>
            </ul>
          </div>
        </div>
      </nav>

      <div class="container-fluid text-center py-2 mb-sm-2">
        <h1>
          {{ title }}
        </h1>
      </div>
    </header>

    <main class="flex-grow-1" role="main" id="mainContent">
      {% block main %}
        {{ block('flash', 'theme/flash.html.twig') }}
        <div class="text-center">
          Some content !
        </div>
      {% endblock %}
    </main>
    <footer role="contentinfo" aria-label="{{ 'aria.label.footer'|trans }}">
      <div class="container-fluid fw-light bg-body-secondary small mt-4 py-2">
        <div class="row"></div>
        <div class="row gw-md-4">
          <div class="col-12 col-md-6 text-center text-md-end">
            {{ 'layout.footer.madeWith'|trans }}
            <span class="fa-brands fa-symfony"></span>
            <span class="fst-italic ms-1">Symfony 7</span>
            <span class="mx-1">|</span>
            <span class="fa-brands fa-bootstrap"></span>
            <span class="fst-italic ms-1">Bootstrap 5</span>
          </div>

          <div class="col-12 col-md-6 text-center text-md-start">
            {{ ('layout.footer.version'|trans) ~ ' ' ~ env.versioning.version ~ ' - ' ~ ('layout.footer.releaseDate'|trans) ~ ' '
              ~ (env.versioning.release_date|format_datetime('short', 'none')) }}
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
