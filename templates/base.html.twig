<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="turbo-refresh-method" content="morph" />
    <title>
      {% block tab_title %}
        {{ title }}
      {% endblock %}
      {{ ' - ' }}
      {% trans %}app.name{% endtrans %}
      {{ ' - ' }}
      Darkirby
    </title>
    <link rel="icon" href=" {{ asset('build/favicon.png') }}" />
    {% block stylesheets %}
      {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
      {{ encore_entry_script_tags('app') }}
    {% endblock %}
  </head>

  <body class="d-flex flex-column min-vh-100">
    <header>
      {# <nav class="bg-light">
                  <div class="container">
                      <div class="bg-secondary py-4"></div>
                  </div>
              </nav> #}

      <div class="container text-center mb-4">
        <h1>
          {{ title }}
        </h1>
      </div>
    </header>

    <main class="flex-grow-1">
      {% block main %}
        {{ block('flash', 'theme/flash.html.twig') }}
        <div class="text-center">
          Some content !
        </div>
      {% endblock %}
    </main>

    <footer>
      <div class="container-fluid fw-light bg-light small mt-4 py-2">
        <div class="row"></div>
        <div class="row gw-md-4">
          <div class="col-12 col-md-6 text-center text-md-end">
            {% trans %}app.madeWith{% endtrans %}
            <span class="fa-brands fa-symfony"></span><span class="fst-italic ms-1">Symfony 7</span>
            <span class="mx-1">|</span>
            <span class="fa-brands fa-bootstrap"></span><span class="fst-italic ms-1">Bootstrap 5</span>
          </div>

          <div class="col-12 col-md-6 text-center text-md-start">
            {% trans %}app.version{% endtrans %} {{ versioning.version ~ ' - ' }}{% trans %}app.releaseDate{% endtrans %} {{ versioning.release_date|format_datetime('short', 'none') }}
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
